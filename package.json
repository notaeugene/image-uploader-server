  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start:dev": "NODE_ENV=development concurrently --handle-input \"wait-on ./dist/main.js && nodemon\" \"tsc -w -p ./tsconfig.build.json\" ",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node ./dist/main.js",
    "test:unit": "jest --testPathPattern=\"__tests__/unit/.*\\.spec\\.ts\"",
    "test:integration": "jest --testPathPattern=\"__tests__/integration/.*\\.spec\\.ts\""
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/supertest": "^2.0.10",
    "concurrently": "^5.3.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "wait-on": "^5.2.1"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  }
}
